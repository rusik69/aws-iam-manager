# AWS Credentials for master account
# Set these environment variables or configure AWS CLI with 'aws configure'
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# Optional: IAM Manager cross-account role name (deployed by StackSet)
IAM_ORG_ROLE_NAME=IAMManagerCrossAccountRole

# Optional: Custom names for resources
IAM_USER_NAME=iam-manager
IAM_POLICY_NAME=IAMManagerCustomPolicy
STACK_SET_NAME=IAMManagerRoleStackSet

# Application Configuration
PORT=8080

# OAuth2 Proxy Configuration for Google SSO
# Generate a random 32-character string for cookie secret
# You can use: openssl rand -base64 32
OAUTH2_COOKIE_SECRET=your_32_character_random_string_here

# Google OAuth2 Configuration
# Get these values from Google Cloud Console -> APIs & Services -> Credentials
# Create OAuth 2.0 Client IDs for web application
OAUTH2_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
OAUTH2_CLIENT_SECRET=your_google_client_secret_here

# OAuth2 Proxy Redirect URL
# This will be automatically updated during deployment to use the actual host
# Configure this URL in your Google Cloud Console OAuth2 settings
# Format: http://your-domain.com/oauth2/callback
OAUTH2_REDIRECT_URL=http://localhost/oauth2/callback